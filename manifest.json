{
    "name": "Movie Tracker",
    "version": "1.0.1",
    "description": "Extension for quick search for movies",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js", "backgroundMessaging.js"],
        "persistent": false
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js", "contentMessaging.js"]
    }],
    "browser_action": {
        "default_title": "created by @aturytsa",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "storage",
        "http://*/*",
        "https://*/*"
    ]
}